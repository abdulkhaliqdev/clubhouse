<div class="column is-half">

<% if user_signed_in? %>
  <article class="media box">
    <div class="media-content">
      <%= render "posts/form" %>
    </div>
  </article>
<% end %>
  <% @posts.each do |post| %>
    <div class="box">
      <div class="media-content">
        <div class="content">
        <% if user_signed_in? %>
          <strong><%= post.user.name %></strong><br />
          <small><%= post.user.username %></small><br />
        <% end %>
          <p><%= post.post %></p>
        </div>
      </div>
      <% if user_signed_in? %>
      <nav class="level">
        <div class="level-left is-mobile">
          <%= link_to post, class: "level-item" do %>
            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to edit_post_path( post ), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil-alt" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?"} do %>
            <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
          <% end %>
        </div>
      </nav>
      <% end %>
    </div>
  <% end %>
</div>
